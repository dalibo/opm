% layout config 'layout';
% my @services = @{stash 'services'};
% my $id = stash 'id';

<div class="row">
  <div class="span6">
    <div class="box">
        <b><%=l 'List of services for server' %> <u><%= stash 'hostname' %></u> :
        [
        <%= link_to graphs_showserver => { idserver => $id } => begin %> <%=l 'view all' %><% end %>
        ]
        </b><br />
        <% if (scalar(@services)) { %>
          <ul>
            <% foreach my $s (@services) { %>
              <%   my %line = %{$s}; %>
              <% #FIXME: handle wh_nagios state dependancy %>
              <li><%= link_to graphs_show => { id => $line{id_graph} } => ( class => $line{state} ) => begin %><%= $line{graphname} %><% end %></li>
            <% } %>
          </ul>
        <% } else { %>
        <p>No service found.</p>
        <% } %>
    </div>
  </div>
</div>
